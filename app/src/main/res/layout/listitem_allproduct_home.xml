<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_product"
                android:layout_width="80dp"
                android:scaleType="fitXY"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/milk" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="5dp">


                <TextView
                    android:id="@+id/text_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:gravity="center"
                    android:text="Real Pomegrananate 200ml"
                    android:textColor="@color/grey"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/discrip_product"
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">
                <TextView
                    android:id="@+id/qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="1*1 litre"
                    android:textSize="11dp" />

                    <TextView
                        android:id="@+id/litre_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/qty"
                        android:text="1*1 litre"
                        android:textSize="11dp" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/price_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="MRP: Rs54"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    />

                <Button
                    android:id="@+id/subsscribe_12"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/button_subscribe"
                    android:padding="5dp"
                    android:text="SUBSCRIBE @RS42"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_buyonce"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@color/grey"
                android:padding="5dp"
                android:visibility="visible"
                android:text="BUY ONCE"
                android:textColor="@color/white"
                android:textSize="13dp"
                />

            <RelativeLayout
                android:id="@+id/relative_quantity"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:background="@color/grey"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/minus1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text=""
                    android:layout_centerVertical="true"

                    android:layout_marginTop="3dp"
                    android:background="@drawable/ic_remove_black_24dp"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:layout_centerVertical="true"

                    android:layout_toRightOf="@+id/minus1"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="17sp" />


                <TextView
                    android:id="@+id/plus"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15sp"
                    android:layout_toRightOf="@+id/number"
                    android:gravity="center"
                    android:text=""
                    android:background="@drawable/ic_add_black_24dp"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

            </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>