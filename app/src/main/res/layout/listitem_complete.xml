<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_show"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="@dimen/cardview_default_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_show"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_plan"
                    android:layout_width="80dp"
                    android:padding="10dp"
                    android:layout_height="125dp"
                    android:src="@drawable/fruits"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amul"
                            android:id="@+id/text_plan"
                            android:textSize="15dp"/>


                    </RelativeLayout>
                    <TextView
                        android:id="@+id/discription_plan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="every 3 Days"
                        android:layout_marginTop="5dp"
                        android:textSize="12dp"/>


                    <TextView
                        android:id="@+id/unit_plan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1 litre"
                        android:layout_marginTop="5dp"
                        android:textSize="12dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/price_plan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rs54.0"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="40dp"
                            android:layout_marginTop="5dp"
                            android:textSize="12dp"
                           />

                        <TextView
                            android:id="@+id/quantity_plan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Quantity: 1"
                            android:textSize="12dp"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--<Button-->
                <!--android:id="@+id/delete"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:layout_toLeftOf="@+id/pause"-->
                <!--android:background="@color/white"-->
                <!--android:gravity="center"-->
                <!--android:padding="10dp"-->
                <!--android:text="Delete"-->
                <!--android:textColor="@color/black"-->
                <!--android:textSize="13dp" />-->


                <Button
                    android:id="@+id/reportissue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Report Issue"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:textSize="13dp"

                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:gravity="center"
                    />

            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>