<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="4dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_marginTop="5dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="@dimen/cardview_default_elevation">

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image_day"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/milk"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">


                <TextView
                    android:fontFamily="@font/ubuntu_medium"
                    android:id="@+id/text_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:gravity="center"
                    android:text="Real Pomegrananate 200ml"
                    android:textColor="@color/grey"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/discrip_day"
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14dp" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:gravity="center">

    <TextView
        android:id="@+id/qty_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="1*1 litre"
        android:textSize="11dp" />

                <TextView
                    android:id="@+id/unit_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="1*1 litre"
                    android:layout_toRightOf="@+id/qty_day"
                    android:gravity="center"
                    android:textSize="11dp"/>


</RelativeLayout>
                <TextView
                    android:id="@+id/price_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MRP: Rs54"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                   />

                <Button
                    android:id="@+id/subscribe_day"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:text="SUBSCRIBE @RS42"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"

                    android:padding="5dp"
                    android:textSize="11dp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_subscribe"/>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="BUY ONCE"
                android:layout_gravity="center"

                android:padding="5dp"
                android:textSize="11dp"
                android:textColor="@color/white"
                android:background="@color/grey"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>