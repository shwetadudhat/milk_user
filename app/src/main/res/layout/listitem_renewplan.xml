<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rlCartItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/chk"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:layout_toRightOf="@id/chk"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/milk"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_7sdp"
                android:id="@+id/image_cart"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"/>


            <LinearLayout
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_toRightOf="@id/image_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/ubuntu_medium"
                    android:textSize="@dimen/_13sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:textColor="@color/title_clr"
                    android:text="Amul Malai Paneer (1 kg)"
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:fontFamily="@font/ubuntu_bold"
                    android:textSize="@dimen/_14sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:textColor="@color/main_clr"
                    android:text="Rs450"
                    android:id="@+id/product_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:paddingTop="@dimen/_4sdp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:textSize="@dimen/_13sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:textColor="@color/txt_clr"
                    android:text="QTY : 2"
                    android:id="@+id/product_qty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>





            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/product_borderclr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/gray_light"/>


    </LinearLayout>



</LinearLayout>