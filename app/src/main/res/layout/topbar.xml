                android:src="@drawable/ic_notifications_black_24dp"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:visibility="gone"
                />

        </LinearLayout>


    </LinearLayout>

