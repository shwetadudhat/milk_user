<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/title_clr"
            android:fontFamily="@font/ubuntu_medium"
            android:background="@drawable/home_add"
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sdp"
            android:text="How to subscribe a product?"
            android:padding="@dimen/_10sdp"/>


        <ImageView
            android:layout_centerVertical="true"
            android:tint="@color/title_clr"
            android:id="@+id/ivDwn"
            android:src="@drawable/ic_arrow1"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_15sdp" />

        <TextView
            android:textColor="@color/small_title_clr"
            android:fontFamily="@font/ubuntu_regular"
            android:visibility="gone"
            android:layout_below="@+id/question"
            android:background="@drawable/home_add"
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:text="Till what time can you  canplace the order everyday?"
            android:padding="@dimen/_10sdp"/>



    </RelativeLayout>
</LinearLayout>