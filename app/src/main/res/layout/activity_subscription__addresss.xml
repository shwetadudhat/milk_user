<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
   >

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/tool1"
        android:layout_height="wrap_content"
        android:background="@color/greendark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="30dp"
                android:id="@+id/back"
                android:background="@drawable/ic_arrow_back_black_24dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/history12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Address"
                android:textSize="15dp"

                android:textColor="@color/white"
                android:layout_marginLeft="40dp"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/tool1"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDIT ADDRESS"
            android:padding="5dp"
            android:background="#f6f6f6"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/name"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@color/grey"
                android:textSize="18sp"/>

            <Spinner
                android:layout_width="200dp"
                android:id="@+id/select_area"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:layout_height="40dp" />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile"
                android:layout_gravity="center_horizontal"
                android:id="@+id/mobile_number"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="15sp"/>


        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/bg_grey"
                android:orientation="vertical"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:text="House/Flat/Tower"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:background="@color/grey"
                    android:textColor="@color/black"
                    android:layout_height="30dp" />


                <EditText
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:hint="Enter here"
                    android:textSize="15dp"
                    android:lines="1"
                    android:maxLines="1"
                    android:id="@+id/house_number"
                    android:textAlignment="center"
                    android:layout_height="30dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/bg_grey"
                android:orientation="vertical"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:text="Street/Locality"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:background="@color/grey"
                    android:textColor="@color/black"
                    android:layout_height="30dp" />


                <EditText
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:hint="Enter here"
                    android:textSize="15dp"
                    android:lines="1"
                    android:maxLines="1"
                    android:id="@+id/street_name"
                    android:textAlignment="center"
                    android:layout_height="30dp" />


            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Address"
        android:id="@+id/saved_address"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"

        android:layout_gravity="end"
        android:background="#141404"
        android:layout_marginTop="10dp"/>



</RelativeLayout>