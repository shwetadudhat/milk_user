<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        android:layout_marginTop="10dp"
        card_view:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:id="@+id/order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Type :"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/order_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buy Once"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/order"
                    android:textSize="15dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="To be delivered"
                    android:textColor="@color/black"
                    android:drawableRight="@drawable/clock"
                    android:drawablePadding="5dp"
                    android:id="@+id/substatus_schedule"
                    android:textSize="15dp"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginTop="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imge_schdule"
                    android:layout_width="100dp"
                    android:layout_height="125dp"
                    android:src="@drawable/milk"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mother Dairy full cream 1L"
                            android:id="@+id/text_schedule"
                            android:textSize="15dp"/>


                    </RelativeLayout>
                    <TextView
                        android:id="@+id/discription_schedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="This product is delivered to you Every 3 Days"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        android:textSize="12dp"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/qty_schdule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="1*1 litre"
        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/unit_schedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1*1 litre"
                        android:layout_toRightOf="@+id/qty_schdule"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:textSize="12dp"/>


</RelativeLayout>
                    <TextView
                        android:id="@+id/price_schedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs54.0"
                        android:textColor="@color/black"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="5dp"
                        android:textSize="15dp"
                       />


                    <TextView
                        android:id="@+id/quantity_schedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quantity: 1"
                        android:textSize="12dp"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>