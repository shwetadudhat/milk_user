<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:background="@drawable/home_add"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:padding="@dimen/_12sdp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_7sdp">

            <ImageView android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:id="@+id/ivNotify"
                android:padding="@dimen/_5sdp"
                android:tint="@color/skip_clr"
                android:background="@drawable/bg_round"
                android:src="@drawable/ic_noun_subscribe"/>


        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ivNotify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/ubuntu_regular"
                android:textColor="@color/title_clr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/offer_name"
                android:textSize="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="offer 20% discount"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:fontFamily="@font/ubuntu_regular"
                android:textColor="@color/small_title_clr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/offer_time"
                android:layout_below="@+id/offer_name"
                android:paddingTop="@dimen/_2sdp"
                android:textSize="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="@string/nav_header_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


        </RelativeLayout>



    </RelativeLayout>


</LinearLayout>