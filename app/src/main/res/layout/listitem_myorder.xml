<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlMain"
        android:background="@drawable/home_add"
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/milk"
            android:layout_margin="@dimen/_10sdp"
            android:layout_alignParentLeft="true"
            android:id="@+id/image_ordr"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"/>


        <LinearLayout
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="vertical"
            android:layout_toRightOf="@id/image_ordr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:fontFamily="@font/ubuntu_medium"
                android:textSize="@dimen/_13sdp"
                android:paddingRight="@dimen/_10sdp"
                android:textColor="@color/title_clr"
                android:text="Amul Malai Paneer (1 kg)"
                android:id="@+id/text_ordr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/ubuntu_bold"
                android:textSize="@dimen/_14sdp"
                android:paddingRight="@dimen/_10sdp"
                android:textColor="@color/main_clr"
                android:text="Rs450"
                android:id="@+id/price_ordr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/ubuntu_medium"
                android:textSize="@dimen/_13sdp"
                android:paddingRight="@dimen/_10sdp"
                android:textColor="@color/small_title_clr"
                android:text="QTY : 2"
                android:id="@+id/qty_ordr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/ubuntu_medium"
                android:textSize="@dimen/_12sdp"
                android:paddingRight="@dimen/_10sdp"
                android:textColor="@color/green"
                android:text="1 Lit .ltrs"
                android:id="@+id/delvr_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>





        </LinearLayout>


    </RelativeLayout>

</LinearLayout>