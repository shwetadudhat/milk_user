<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ChooseLoginSignup">

    <!-- android:background="@color/main_clr"-->
    <LinearLayout
       android:background="@drawable/back123"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2">

        <!--android:background="@drawable/cardcorner_xml"-->
        <RelativeLayout

            android:layout_weight="1.6"
            android:layout_width="match_parent"
            android:layout_height="0dp">


            <ImageView
                android:id="@+id/ivWelcome"
                android:src="@drawable/ic_welcome"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_220sdp"/>

            <RelativeLayout
                android:layout_below="@id/ivWelcome"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_welcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_desc"
                    android:fontFamily="@font/ubuntu_bold"
                    android:gravity="center"
                    android:text="@string/welcome_to_milkdelight"
                    android:textColor="@color/main_clr"
                    android:textSize="@dimen/_18sdp" />


                <TextView
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingTop="@dimen/_8sdp"
                    android:textColor="@color/product_desc"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/ubuntu_regular"
                    android:id="@+id/tv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="2"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:text="@string/in_publishing_and_graphic_design_loren_ipsum_is_a_placeholder_text_commonly"
                    android:textSize="@dimen/_11sdp" />


            </RelativeLayout>








        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="0.4"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:weightSum="2"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:fontFamily="@font/ubuntu_bold"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:padding="@dimen/_10sdp"
                    android:id="@+id/btn_login"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/main_clr"
                    android:text="@string/Login_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_login"/>

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:fontFamily="@font/ubuntu_bold"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:padding="@dimen/_10sdp"
                    android:id="@+id/btn_signup"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/white"
                    android:text="@string/Sign_up"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_signup"/>



            </LinearLayout>

            <!--<Button
                android:padding="@dimen/_10sdp"
                android:id="@+id/btn_submit"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:textColor="@color/main_clr"
                android:text="@string/submit"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_login"/>-->

        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>