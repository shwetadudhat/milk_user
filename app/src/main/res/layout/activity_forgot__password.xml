<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Forgot_Password">

    <LinearLayout
        android:background="@color/main_clr"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2">

        <RelativeLayout
            android:background="@drawable/cardcorner_xml"
            android:layout_weight="1.6"
            android:layout_width="match_parent"
            android:layout_height="0dp">


            <ImageView
                android:id="@+id/ivForgotPass"
                android:src="@drawable/ic_forgot1"
                android:layout_marginTop="@dimen/_100sdp"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_110sdp"/>

            <TextView
                android:id="@+id/tv_forgot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivForgotPass"
                android:layout_marginTop="@dimen/_30sdp"
                android:fontFamily="@font/ubuntu_medium"
                android:gravity="center"
                android:maxLines="2"
                android:text="@string/forgot_password"
                android:textColor="@color/main_clr"
                android:textSize="@dimen/_18sdp" />

            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:weightSum="2"
                android:id="@+id/ll_login"
                android:layout_below="@id/tv_forgot"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/txt_clr"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/login_signup_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:fontFamily="@font/ubuntu_medium"
                    android:gravity="center|right"
                    android:text="@string/already_have_an_account" />

                <TextView
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:id="@+id/tvLogin"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="0.6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/login1"
                    android:textColor="@color/main_clr" />


            </LinearLayout>

            <RelativeLayout
                android:layout_below="@+id/ll_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:focusable="true"
                    android:id="@+id/edNumberEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                   android:layout_centerVertical="true"
                    android:background="@drawable/bg_grey"
                    android:fontFamily="@font/ubuntu_medium"
                    android:hint="@string/enter_email_id_phone_number"
                    android:inputType="text"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/main_clr"
                    android:textSize="@dimen/_12sdp" />


            </RelativeLayout>





        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="0.4"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:fontFamily="@font/ubuntu_bold"
                android:padding="@dimen/_5sdp"
                android:id="@+id/btn_sendOtp"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/main_clr"
                android:text="@string/send_otp"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_login"/>

        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>