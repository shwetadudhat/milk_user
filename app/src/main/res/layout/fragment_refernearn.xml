<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <!--android:background="@color/main_clr"-->
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <!--android:background="@drawable/cardcorner_xml"-->
        <RelativeLayout

            android:layout_weight="1.6"
            android:layout_width="match_parent"
            android:layout_height="0dp">


            <ImageView
                android:id="@+id/ivReferEarn"
                android:src="@drawable/ic_referandearn"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_220sdp"/>

            <TextView
                android:fontFamily="@font/ubuntu_regular"
                android:id="@+id/tv_refer"
                android:layout_marginTop="@dimen/_25sdp"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/main_clr"
                android:gravity="center"
                android:layout_below="@id/ivReferEarn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_margin="@dimen/_25sdp"
                android:text="@string/invite_text"/>

            <LinearLayout
                android:id="@+id/llCode"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_40sdp"
                android:layout_below="@+id/tv_refer"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/ubuntu_bold"
                    android:id="@+id/edCode"

                    android:textColor="@color/main_clr"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1.4"
                    android:layout_width="0dp"
                    android:background="@drawable/bg_dottedbox"
                   android:text="FRIENDEARN50"
                    android:enabled="false"
                    android:inputType="text"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_14sdp"
                    android:layout_height="@dimen/_40sdp"/>

                <TextView
                    android:fontFamily="@font/ubuntu_bold"
                    android:id="@+id/tvCopy"
                    android:textSize="@dimen/_14sdp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/main_clr"
                    android:text="@string/copy"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="0.6" />


            </LinearLayout>

            <ImageView
                android:padding="@dimen/_15sdp"
                android:src="@drawable/ic_menu_share"
                android:backgroundTint="@color/main_clr"
                android:background="@drawable/bg_round"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/llCode"
                android:id="@+id/imgShare"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_65sdp"/>

            <!--<com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="@dimen/_65sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_menu_share"
                android:id="@+id/btnShare"
                android:elevation="0dp"
                android:backgroundTint="@color/main_clr"
                android:layout_below="@+id/llCode"
                android:layout_height="@dimen/_65sdp"/>-->



        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>